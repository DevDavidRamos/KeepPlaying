<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home_menu.home.HomeFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="303dp"
        android:layout_height="127dp"
        android:layout_marginTop="4dp"
        android:text="Hola buen dia :)."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="116dp"
        android:layout_height="127dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_iconshop" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="319dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:text="Tarjetas de regalo populares"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="430dp"
        android:layout_height="119dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/ibtnPsn"
        android:layout_width="69dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/blu"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_psn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/ibtnXbox"
        android:layout_width="74dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/verde"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_xbox"
        app:layout_constraintEnd_toStartOf="@+id/ibtnNintendo"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/ibtnPsn"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/ibtnNintendo"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/switch_red"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>